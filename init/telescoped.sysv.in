#! /bin/sh
#

### BEGIN INIT INFO
# Provides: telescoped
# Required-Start: $network
# Required-Stop: $network
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: controls a telescope
### END INIT INFO

set -e

PROG="Telescope Server"
DAEMON=@BINDIR@/telescope-server
NAME=telescoped
PIDFILE=/var/run/${NAME}.pid
DEFAULTS=/etc/default/telescoped

# export variables if the exist in $DEFAULTS
set -a

# check for daemon
test -e $DAEMON || exit 0

# include defaults
[ -r $DEFAULTS ] && . $DEFAULTS

# set PATH
PATH=/sbin:/usr/sbin:/bin:/usr/bin
export PATH

# get lsb functions
. /lib/lsb/init-functions

start() {
    log_daemon_msg "Starting $PROG" "$NAME"
    start-stop-daemon --start --quiet --oknodo --background \
	--make-pidfile --pidfile $PIDFILE --startas $DAEMON
    log_end_msg $?
}

stop() {
    log_daemon_msg "Stopping $PROG" "$NAME"
    start-stop-daemon --stop --quiet --pidfile $PIDFILE --retry 10
    log_end_msg $?
}

case "$1" in
    start)
	start
	;;
    stop)
	stop
	;;
    restart)
	stop
	start
	;;
    status)
	status_of_proc -p $PIDFILE $DAEMON $NAME && exit 0 || exit $?
	;;
    *)
	echo "Usage: $0 {start|stop|restart|status}"
	exit 1
esac
